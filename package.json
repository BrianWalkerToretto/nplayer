{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "start": "cross-env NODE_ENV=development webpack serve --config build/webpack.dev.js",
    "build": "npm run lint && cross-env NODE_ENV=production webpack --config build/webpack.prod.js --progress --display-error-details --colors && tsc -b",
    "changelog": "conventional-changelog -p angular -r 2 -i CHANGELOG.md -s",
    "publish": "lerna publish from-package --force-publish=* --exact --yes",
    "release": "bash scripts/release.sh",
    "lint": "eslint packages/*/src/**/*.ts",
    "serve:player": "webpack serve --config ./scripts/webpack.dev.js --env target=player",
    "build:player": "node ./scripts/build.js --name=player",
    "serve:danmaku": "webpack serve --config ./scripts/webpack.dev.js --env target=player-danmaku  fixture=danmaku"
  },
  "devDependencies": {
    "@babel/core": "^7.12.13",
    "@babel/preset-env": "^7.13.12",
    "@microsoft/api-extractor": "^7.13.1",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "babel-loader": "^8.2.2",
    "chalk": "^4.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "conventional-changelog-cli": "^2.1.1",
    "cross-env": "^7.0.3",
    "css-loader": "^5.0.2",
    "eslint": "^7.19.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-webpack-plugin": "^2.5.0",
    "execa": "^5.0.0",
    "fibers": "^5.0.0",
    "fs-extra": "^9.1.0",
    "glob": "^7.1.6",
    "html-webpack-plugin": "^5.0.0",
    "minimist": "^1.2.5",
    "sass": "^1.32.6",
    "sass-loader": "^11.0.1",
    "semver": "^7.3.4",
    "style-loader": "^2.0.0",
    "terser-webpack-plugin": "^5.1.1",
    "ts-loader": "^8.0.15",
    "typescript": "^4.1.3",
    "webpack": "^5.21.2",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.7.3"
  }
}
