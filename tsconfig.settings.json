{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "module": "esnext",
    "noImplicitAny": true,
    "target": "es5",
    "importHelpers": true,
    "moduleResolution": "Node",
    "sourceMap": true,
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "emitDeclarationOnly": true
  },
  "exclude": ["node_modules", "packages/*/node_modules", "packages/*/dist"]
}
